<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Cell phone</th>
      <th>Alt phone</th>
      <th>Email</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Dob</th>
      <th>Registration on</th>
      <th>Reference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.cell_phone %></td>
        <td><%= patient.alt_phone %></td>
        <td><%= patient.email %></td>
        <td><%= patient.street %></td>
        <td><%= patient.city %></td>
        <td><%= patient.state %></td>
        <td><%= patient.country %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.registration_on %></td>
        <td><%= patient.reference_id %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

