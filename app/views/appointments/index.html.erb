<p id="notice">
	<%= notice %>
</p>

<div class="panel panel-default">
	<!-- Default panel contents -->
	<div class="panel-heading">
		Listing Appointments
	</div>

	<table class="table table-condensed table-striped  table-hover table-bordered">
		<thead>
			<tr>
				<th>Date</th>
				<th>Time</th>
				<th>Patient</th>
				<th>First Appointment</th>
				<th colspan="5"></th>
			</tr>
		</thead>

		<tbody>
			<% @appointments.each do |appointment| %>
			<tr>
				<td><%= appointment.date %></td>
				<td><%= appointment.time.to_s(:time) %></td>
				<td><%= appointment.patient_name %></td>
				<td><%= appointment.is_first %></td>
				<td>
				<div class="btn-group">
					<%= link_to 'Show', appointment, class: "btn btn-xs" %>
					<%= link_to 'Edit', edit_appointment_path(appointment), class: "btn btn-xs"  %>
					<%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs" %>
				</div></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<br>
<%= form_for(@appointment) do |f| %>
<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption">
        <h3>New Patient</h3>
        <p>
				  <%= f.text_field :date, :class=>'form-control'%>
				</p>
        <p>
					<div class="row">
						<div class="col-sm-6 col-md-6">
							<%= f.submit "Quick Create", class: "btn btn-default"%>
						</div>
						<div class="col-sm-6 col-md-6">
							<%= link_to 'New Appointment', new_appointment_path , class: "btn btn-default pull-right" %>
						</div>
					</div>
				</p>
      </div>
    </div>
  </div>
</div>
<% end %>
