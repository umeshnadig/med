<p id="notice"><%= notice %></p>

<div class="form-group">
  <label for="Date" class="col-sm-2 control-label">Date:</label>
  <%= @appointment.date %>
</div>

<div class="form-group">
  <label for="Time" class="col-sm-2 control-label">Time:</label>
  <%= @appointment.time.strftime('%I:%M %P') %>
</div>

<div class="form-group">
  <label for="Patient" class="col-sm-2 control-label">Patient:</label>
  <%= @appointment.patient.full_name %>
</div>

<div class="form-group">
  <label for="FirstAppointment" class="col-sm-2 control-label">First Appointment:</label>
  <%= @appointment.is_first %>
</div>

<%= link_to 'Edit', edit_appointment_path(@appointment) %> |
<%= link_to 'Back', appointments_path %>
